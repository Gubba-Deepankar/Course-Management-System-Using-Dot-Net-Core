@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<h3 style="color:lightseagreen">After successful Registration, You will redirected to login page. Please login to access the website.</h3>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="Register">
    <div class="form-group row">
        <div class="col-sm-2"><label>User ID:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="Username"
                   class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Username"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Password:</label></div>
        <div class="col-sm-4">
            <input type="password" asp-for="Password"
                   class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Password"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Confirm Password:</label></div>
        <div class="col-sm-4">
            <input type="password" asp-for="ConfirmPassword"
                   class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Teacher:</label></div>
        <div class="col-sm-1"><input type="radio" asp-for="teachebl" class="form-control" value="Teacher" /></div>
        <div class="col">
            <span asp-validation-for="teachebl"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Student:</label></div>
        <div class="col-sm-1">
            <input type="radio" asp-for="teachebl" class="form-control" value="Student" />
        </div>
        <div class="col">
            <span asp-validation-for="teachebl"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="offset-2 col-sm-4">
            Already registered? <a asp-action="LogIn">Log In</a>
        </div>
    </div>

</form>
